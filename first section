<body>
  <section class="section" id="pinned-section" style="background-image: url('https://www.onetapsoftware.com/wp-content/uploads/2024/10/Untitled-design-6.png'); background-size: cover; background-position: center;">
    <img src="https://www.onetapsoftware.com/wp-content/uploads/2024/10/OOS-Logo-2.png" alt="Logo" class="logo" id="logo">
    <div class="content" id="content">
      <h1>Welcome to Luxe Hair Studio</h1>
      <p>Experience the perfect blend of style, comfort, and elegance. Let our experts transform your look.</p>
      <button>Book an Appointment</button>
    </div>
    <img src="https://www.onetapsoftware.com/wp-content/uploads/2024/10/scroll-down-icon-3.png" alt="Scroll Down Icon" class="scroll-icon" id="scroll-icon">
  </section>
  <script>
    console.clear();

    gsap.set("#logo", {scale: 1});
    gsap.set("#content", {opacity: 0});

    gsap.to("#logo", {
      scale: 0.75,
      ease: "power1.out",
      scrollTrigger: {
        trigger: "#pinned-section",
        start: "top top",
        end: "+=1000",
        scrub: true
      }
    });

    gsap.to("#content", {
      opacity: 1,
      delay: 0.5,
      scrollTrigger: {
        trigger: "#pinned-section",
        start: "top top",
        end: "+=500",
        scrub: true
      }
    });

    gsap.to("#scroll-icon", {
      opacity: 0,
      scrollTrigger: {
        trigger: "#pinned-section",
        start: "top top",
        end: "+=100",
        scrub: true
      }
    });

    gsap.fromTo("#scroll-icon", 
      {y: 0},
      {
        y: 20,
        repeat: -1,
        yoyo: true,
        ease: "power1.inOut",
        duration: 1.5
      });
  </script>
</body>
</html>
